<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <description>Example flow showing how to use the Get Geolocation Lightning Web Component.</description>
    <interviewLabel>Example Flow for Get Geolocation LWC {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Example Flow for Get Geolocation LWC</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <screens>
        <name>Display_Geolocation</name>
        <label>Display Geolocation</label>
        <locationX>176</locationX>
        <locationY>278</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <fields>
            <name>Show_Geolocation</name>
            <fieldText>&lt;p&gt;&lt;b&gt;Latitude:&lt;/b&gt; {!Latitude}&lt;/p&gt;&lt;p&gt;&lt;b&gt;Longitude:&lt;/b&gt; {!Longitude}&lt;/p&gt;&lt;p&gt;&lt;b&gt;Altitude:&lt;/b&gt; {!Altitude} meters&lt;/p&gt;&lt;p&gt;&lt;b&gt;Heading:&lt;/b&gt; {!Heading} degrees&lt;/p&gt;&lt;p&gt;&lt;b&gt;Speed:&lt;/b&gt; {!Speed} meters/sec&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>false</showHeader>
    </screens>
    <screens>
        <name>Get_Geolocation</name>
        <label>Get Geolocation</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>Display_Geolocation</targetReference>
        </connector>
        <fields>
            <name>Hit_Next</name>
            <fieldText>&lt;p&gt;Hit the [Next] button to see the geolocation data returned by the component.&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>Get_Latitude_and_Longitude</name>
            <extensionName>c:getGeolocationFlowComponent</extensionName>
            <fieldType>ComponentInstance</fieldType>
            <inputParameters>
                <name>showMap</name>
                <value>
                    <booleanValue>true</booleanValue>
                </value>
            </inputParameters>
            <inputParameters>
                <name>zoomLevel</name>
                <value>
                    <numberValue>15.0</numberValue>
                </value>
            </inputParameters>
            <inputsOnNextNavToAssocScrn>ResetValues</inputsOnNextNavToAssocScrn>
            <isRequired>true</isRequired>
            <outputParameters>
                <assignToReference>Latitude</assignToReference>
                <name>latitude</name>
            </outputParameters>
            <outputParameters>
                <assignToReference>Longitude</assignToReference>
                <name>longitude</name>
            </outputParameters>
            <outputParameters>
                <assignToReference>Altitude</assignToReference>
                <name>altitude</name>
            </outputParameters>
            <outputParameters>
                <assignToReference>Heading</assignToReference>
                <name>heading</name>
            </outputParameters>
            <outputParameters>
                <assignToReference>Speed</assignToReference>
                <name>speed</name>
            </outputParameters>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>false</showHeader>
    </screens>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Geolocation</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <description>Stores the altitude in meters of the geolocation returned by the Get Geolocation LWC.</description>
        <name>Altitude</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <scale>1</scale>
    </variables>
    <variables>
        <description>Stores the heading in degrees of the geolocation returned by the Get Geolocation LWC. 0 is north, 90 is east, 180 is south, and 270 is west. If the current speed is 0, this value will be null.</description>
        <name>Heading</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <scale>2</scale>
    </variables>
    <variables>
        <description>Stores the latitude of the geolocation returned by the Get Geolocation LWC. Using a dedicated variable with a specific number of decimal places instead of the default returned by the component in the screen will result in better precision returned to the flow.</description>
        <name>Latitude</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <scale>7</scale>
    </variables>
    <variables>
        <description>Stores the longitude of the geolocation returned by the Get Geolocation LWC. Using a dedicated variable with a specific number of decimal places instead of the default returned by the component in the screen will result in better precision returned to the flow.</description>
        <name>Longitude</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <scale>7</scale>
    </variables>
    <variables>
        <description>Stores the speed in meters/second of the geolocation returned by the Get Geolocation LWC.</description>
        <name>Speed</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <scale>2</scale>
    </variables>
</Flow>
